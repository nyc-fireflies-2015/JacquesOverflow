<header>
  <div id="logo">
    <%= link_to root_path do %>
      <div id="so-img"><%=image_tag("so-icon.png") %></div>
      <div id="word-1"><%=image_tag("logo-word-1.png")%></div>
      <div id="word-2"><%=image_tag("logo-word-2.png") %></div>
    <% end %>
  </div>
  <nav class="header-nav">
    <%= link_to "Questions", root_path %>
    <% if logged_in? %>
      <%= link_to "Ask a Question", new_question_path %>
      <%= link_to "Profile", profile_path(current_user) %>
      <%= link_to "Log Out", logout_path, method: :delete %>
    <%else%>
      <%= link_to "Sign Up", register_path, class: "button" %>
      <%= link_to "Log In", login_path, class: "button" %>
    <%end%>
    <p>
      <%= form_for :question, url: search_path, method: "get", id: "search" do |f|%>
        <%= image_tag("searchicon.png") %>
        <%= f.text_field :title, name: "search", placeholder: "search", class: "search-text", value: "" %>
      <% end %>
    <p>
  </nav>
</header>
